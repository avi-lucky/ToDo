.container{
    position: relative;
    max-width: 800px;
    padding: 10px;
    margin: 0 auto;
}
.addTask{
    width: 100%;
    display: flex;
    padding: 10px 0;
}
.addTask > input[type="text"]{
    width: 90%;
    color: #333;
    border-bottom: 2px solid #666;
    background: none;
    padding: 10px;
    font-size: 22px;
    outline: none;
}
.addTask button{
    margin: 0 10px;
    background: #666;
    color: #fff;
    font-size: 18px;
    text-transform: uppercase;
    padding: 10px;
    border: none;
    outline: none;
    border-radius: 5px;
    cursor: pointer;
}
.Pending .Completed{
    margin: 5px 0;
    padding: 20px;
}
h3{
    font-size: 28px;
    text-transform: uppercase;
    text-align: center;
    color: #222
}
ol{
    list-style: none;
    counter-reset: my-counter;
}
ol li{
    width: 100%;
    padding: 18px;
    margin: 5px 0;
    background: #baccc0;
    font-size: 22px;
    counter-increment: my-counter;
}
ol.Completed li{
    background: #849b8b;
}
ol li::before{
    content: counter(my-counter);
    background: #757288;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    display: inline-block;
    line-height: 2rem;
    text-align: center;
    color: rgb(241, 237, 237);
    margin-right: 0.5rem;
}
li form{
    float: right;
    padding: 5px;
    font-size: 25px;
    margin-right: 15px;
    border: none;
    outline: none;
    cursor: pointer;
}
.checkbox{
    width: 27px;
    height: 27px;
}
li button{
    width: 30px;
    height: 30px;
